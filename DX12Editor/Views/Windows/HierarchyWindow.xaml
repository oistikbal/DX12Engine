<UserControl
    x:Class="DX12Editor.Views.Windows.HierarchyWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DX12Editor.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Entities"
    Width="Auto"
    Height="Auto"
    mc:Ignorable="d">

    <TreeView
        x:Name="EntityTreeView"
        Grid.Column="0"
        Margin="5"
        ItemsSource="{Binding Scenes}">
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Entities}">
                <TextBlock FontWeight="Bold" Text="{Binding SceneName}" />
                <HierarchicalDataTemplate.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="10,0,0,0" Text="{Binding Name}" />
                    </DataTemplate>
                </HierarchicalDataTemplate.ItemTemplate>
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</UserControl>
