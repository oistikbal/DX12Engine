<UserControl x:Class="DX12Editor.Views.Windows.EntitiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DX12Editor.Views.Windows"
        mc:Ignorable="d"
        x:Name="Entities"
        Height="Auto" Width="Auto">

    <TreeView x:Name="EntityTreeView" 
          Grid.Column="0" 
          Margin="5"
          ItemsSource="{Binding Scenes}">
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Entities}">
                <TextBlock Text="{Binding SceneName}" FontWeight="Bold" />
                <HierarchicalDataTemplate.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" Margin="10,0,0,0" />
                    </DataTemplate>
                </HierarchicalDataTemplate.ItemTemplate>
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</UserControl>
